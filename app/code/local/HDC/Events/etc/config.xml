<?xml version="1.0"?>
<config>
  <modules>
    <HDC_Events>
      <version>0.1.0</version>
    </HDC_Events>
  </modules>
  <global>
    <helpers>
      <events>
        <class>HDC_Events_Helper</class>
      </events>
    </helpers>
	<blocks>
	  <events>
		<class>HDC_Events_Block</class>
	  </events>
	</blocks>
	<models>
	  <events>
		<class>HDC_Events_Model</class>
		<resourceModel>events_mysql4</resourceModel>
	  </events>
	  <events_mysql4>
		<class>HDC_Events_Model_Mysql4</class>
		<entities>		  
			  <event>
				<table>events</table>
			  </event>
        </entities>
	  </events_mysql4>
	</models>
	<resources>
	  <events_setup>
		<setup>
		  <module>HDC_Events</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </events_setup>
	  <events_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </events_write>
	  <events_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </events_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <events>
	    <use>admin</use>
		<args>
		  <module>HDC_Events</module>
		  <frontName>events</frontName>
		</args>
	  </events>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <hdc module="events">
		<sort_order>100</sort_order>
		<children>
		  <event module="events">
		    <title>Events</title>
			<sort_order>0</sort_order>
			<action>events/adminhtml_event</action>
		  </event>
		</children>
	  </hdc>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<events translate="title" module="events">
			  <title>Events</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <event translate="title">
			<title>Manage Event</title>
			<sort_order>0</sort_order>
		  </event>
			  </children>
			</events>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<events>
		  <file>events.xml</file>
		</events>
	  </updates>
	</layout>
  </adminhtml>
</config> 