<?xml version="1.0"?>   
<layout version="0.1.0">   
  <testimonials_index_index>   
    <reference name="root">   
      <action method="setTemplate"><template>page/1column.phtml</template></action>   
    </reference>   
    <reference name="content">
<block type="testimonials/collection" name="testimonials_collection" template="testimonials/collection.phtml" />	
      <block type="testimonials/form" name="testimonials_index" template="testimonials/form.phtml">   
		<block type="captcha/captcha" name="captcha">
			 <reference name="head">
				 <action method="addJs">
					 <file>mage/captcha.js</file>
				 </action>
			 </reference>
			 <action method="setFormId">
				 <formid>testimonials</formid>
			 </action>
			 <action method="setImgWidth">
				 <width>230</width>
			 </action>
			 <action method="setImgHeight">
				 <width>50</width>
			 </action>
		</block>
	  </block>
    </reference>   
  </testimonials_index_index>   
</layout>   
	